@using BlackSys.Helpers
@model IEnumerable<BlackSys.Models.MembershipInfo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="page-title">
    Membership Card
    <small> Our Complete Membership Lists</small>
</h3>
<div class="row">
