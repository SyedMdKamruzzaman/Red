@using BlackSys.Helpers
@model IEnumerable<BlackSys.Models.Employee>

    @{
        ViewBag.Title = "Employee Area";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h3 class="page-title">
        Employee Administration Area
        <small> Security</small>
    </h3>
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-user"></i>Employee Administration
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                        <a href="javascript:;" class="fullscreen"> </a>
                    </div>
                    <div class="actions">
                        <div class="inputs pull-right">
                            <a href="/Employee/Create" class="btn btn-circle btn-default btn-group-lg" style="margin-right:10px; margin-left:10px;">
                                <i class="fa fa-plus-circle"></i> Create New Employee
                            </a>                           
                        </div>
                        
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover dt-responsive" id="sys-table" cellspacing="0">
                        <thead>
                            <tr>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.EmpID)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.EmpID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EmpName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EmpMobileNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EmpEmail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BloodGroup)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BranchName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DepName)
                                </th>
                                

                                <th>Options</th>
                            </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                            <tr>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.EmpID)
                                </td>*@

                                <td>
                                    @Html.DisplayFor(modelItem => item.EmpID)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.EmpName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmpMobileNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmpEmail)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BloodGroup)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DepName)
                                </td>
                                
                                <td>
                                    @using (Html.BeginForm("Delete", "Employee", FormMethod.Post, new { @id = "notificationForm" }))
                                        {
                                        <div class="input-group-btn">
                                            @Html.AntiForgeryToken()
                                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Save", "Edit", "Employee", routeValues: new { id = item.EmpID }, htmlAttributes: new { @class = "btn btn-default btn-sm" })
                                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-list-alt'></span>", "Details", "Details", "Employee", new { id = item.EmpID }, htmlAttributes: new { @class = "btn btn-default btn-sm" })
                                            <a class="btn btn-danger btn-sm" href="javascript:confirmDelete('Delete','@item.EmpID')"><span class='glyphicon glyphicon-trash'></span></a>
                                        </div>
                                        }
                                </td>
                            </tr>
                            }

                    </table>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{
        <script src="/Content/plugins/datatables/datatables.js" type="text/javascript"></script>
        <script src="/Content/plugins/datatables/datatables.min.js" type="text/javascript"></script>
        <script src="/Content/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>

    }

    @section topLevel{
        @{Html.RenderPartial("_RenderConfirm.Modal"); }
    }
