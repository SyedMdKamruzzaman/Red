@model IEnumerable<BlackSys.Models.LeaveType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-user">Leave Type Management</i>
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                        <a href="javascript:;" class="fullscreen"> </a>
                    </div>
                    <div class="actions">
                        <div class="inputs pull-right">
                            <a href="/LeaveType/Create" class="btn btn-circle btn-default btn-group-lg" style="margin-right:10px; margin-left:10px;">
                                <i class="fa fa-plus-circle"></i> Create New </a>                          
                        </div>
                        
                    </div>
                </div>
 <div class="portlet-body">
             <table class="table table-striped table-bordered table-hover dt-responsive" id="sys-table" cellspacing="0">
             <thead>
				<tr>
        <th>
            @Html.DisplayNameFor(model => model.BranchID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalDays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EffectiveDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpireDate)
        </th>
        <th></th>
    </tr>
	 </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BranchID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalDays)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EffectiveDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpireDate)
        </td>
        <td>
		 @using (Html.BeginForm("Delete", "LeaveType", FormMethod.Post, new { @id = "notificationForm" }))
           {
             <div class="input-group-btn">
			@Html.AntiForgeryToken()
           @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>","Edit", "Edit", "LeaveType", routeValues: new { id=item.LeaveTypeId }, htmlAttributes: new { @class = "btn btn-info btn-sm" })|
           @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-list-alt'></span>", "Details", "Details", "LeaveType", new { id=item.LeaveTypeId }, htmlAttributes: new { @class = "btn btn-success btn-sm" })|
		<a class="btn btn-danger btn-sm" href="javascript:confirmDelete('Delete','@item.LeaveTypeId ')"><span class='glyphicon glyphicon-trash'></span></a>				
		</div>
		}
        </td>
		
			</tr>
}

			</table>
		</div>
            </div>
        </div>
    </div>

