@using BlackSys.Helpers
@model BlackSys.Models.Transaction

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/jquerytoken")
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-green">
                    <i class="icon-pin font-green"></i>
                    <span class="caption-subject bold uppercase">New Transaction</span>
                </div>
                <div class="actions">
                    <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                </div>
            </div>
            <div class="portlet-body form">
                @using (Html.BeginForm("Create", "Transaction", FormMethod.Post, new { @class = "form-horizontal", role = "form", @Id = "Create Transaction" }))
                {
                    <div class="form-body">
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary()


                        <div class="form-group  margin-top-20">

                            <div class="form-group">
                                @Html.LabelFor(model => model.CategoryID, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                   @Html.DropDownListFor(model => model.CategoryID, new System.Web.Mvc.SelectList(ViewBag.category, "ID", "category"), new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Category)
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SubCategoryID, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.DropDownListFor(model => model.SubCategoryID, new System.Web.Mvc.SelectList(ViewBag.SubCategory, "Id", "SubCategoryName"), new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Category)
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.AccountsName, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @*@Html.TextBoxFor(model => model.AccountsName, new { @class = "form-control" })*@
                                    @Html.DropDownListFor(model => model.AccountsName, new System.Web.Mvc.SelectList(ViewBag.AccountsName, "ID", "AccountsName"), new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.AccountsName)
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.CreditDebitFlag, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    <select name="CreditDebitFlag" class="form-control">
                                        <option value="C">Credit</option>
                                        <option value="D">Debit</option>                                    
                                    </select>
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Amount, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.Amount, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Amount)
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Date)
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Remarks, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.Remarks, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Remarks)
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>
                            @*<div class="form-group">
                                @Html.LabelFor(model => model.AppointmentID, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.AppointmentID, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Remarks)
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>*@

                            <div class="form-group">
                                @Html.LabelFor(model => model.BranchId, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.DropDownList("BranchId", new SelectList(ViewBag.Braches, "BranchId", "BranchName"), new { @class = "form-control"})
                                    @Html.ValidationMessageFor(model => model.BranchId)
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>

                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-2 col-md-5">
                                        <a href="/Transaction/Index" class="btn btn-circle btn-default btn-group-lg" style="margin-right:10px; margin-left:10px;">
                                            <i class="fa fa-arrow-left"></i> Back To List
                                        </a>
                                        @*@Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })*@
                                        <input type="submit" class="btn btn-primary" value="Save" />
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                }
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")    
    @Scripts.Render("~/bundles/jquerytoken")
    
    <script type="text/javascript">

            $(document).ready(function () {


                @*$("#AccountsName").tokenInput("@Url.Action("GetAccountName", "Transaction")",
                {
                    theme: 'facebook',
                    tokenLimit: 1,
                    preventDuplicates: true
                });*@

                $("#CategoryID").change(function () {
                   

                    var CategoryId = $('#CategoryID').val();

                        $.ajax({
                            url: '/Transaction/GetSubHeadCategoryByCatId/',
                            type: 'GET',
                            data: { 'CategoryId': CategoryId },
                            success: function (data) {

                                $("#SubCategoryID").empty();
                                var listItems = "<option value='' selected='true'>Select Sub Category</option>";

                                for (var j = 0; j < data.length; j++) {
                                    listItems += "<option ";
                                    listItems += " value='" + data[j].Id + "'>" + data[j].SubCategoryName + "</option>";
                                }

                                $("#SubCategoryID").append(listItems);

                            }


                        });
                });

                $("#SubCategoryID").change(function () {


                    var SubCategoryID = $('#SubCategoryID').val();

                    $.ajax({
                        url: '/Transaction/GetAccountBySubCatId/',
                        type: 'GET',
                        data: { 'SubCategoryID': SubCategoryID },
                        success: function (data) {

                            $("#AccountsName").empty();
                            var listItems = "<option value='' selected='true'>Select Accounts Name</option>";

                            for (var j = 0; j < data.length; j++) {
                                listItems += "<option ";
                                listItems += " value='" + data[j].ID + "'>" + data[j].AccountsName + "</option>";
                            }

                            $("#AccountsName").append(listItems);

                        }


                    });
                });


            });

    </script>
}

