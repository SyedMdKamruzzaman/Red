@model IEnumerable<BlackSys.Models.ProductSales>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-user"></i>
						 <span class="caption-subject bold uppercase">ProductSales Management</span>
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                        <a href="javascript:;" class="fullscreen"> </a>
                    </div>
                    <div class="actions">
                        <div class="inputs pull-right">
                            <a href="/ProductSales/Create" class="btn btn-circle btn-default btn-group-lg" style="margin-right:10px; margin-left:10px;">
                                <i class="fa fa-plus-circle"></i> Create New </a> 							
                        </div>
                        
                    </div>
                </div>
 <div class="portlet-body">
             <table class="table table-striped table-bordered table-hover dt-responsive" id="sys-table" cellspacing="0">
             <thead>
				<tr>
        <th>
            @Html.DisplayNameFor(model => model.AccountsCategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalesDate)
        </th>
        <th></th>
    </tr>
	 </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AccountsCategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalesDate)
        </td>
        <td>
		 @using (Html.BeginForm("Delete", "ProductSales", FormMethod.Post, new { @id = "notificationForm" }))
           {
             <div class="input-group-btn">
			@Html.AntiForgeryToken()
           @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>","Edit", "Edit", "ProductSales", routeValues: new { id=item.Id }, htmlAttributes: new { @class = "btn btn-info btn-sm" })|
           @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-list-alt'></span>", "Details", "Details", "ProductSales", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-success btn-sm" })|
		<a class="btn btn-danger btn-sm" href="javascript:confirmDelete('Delete','@item.Id')"><span class='glyphicon glyphicon-trash'></span></a>				
		</div>
		}
        </td>
		
			</tr>
}

			</table>
		</div>
            </div>
        </div>
    </div>

