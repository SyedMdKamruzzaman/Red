@model System.Data.DataTable
@using System.Data;
@{
    ViewBag.Title = "PreProcessSalarySheet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pre Process Salary Sheet</h2>

<div class="actions">
    <div class="inputs pull-right">
        <a href="/Salary/Export" class="btn btn-circle btn-default btn-group-lg" style="margin-right:10px; margin-left:10px;">
            <i class="fa fa-plus-circle"></i> Download
        </a>
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            @foreach (DataColumn col in Model.Columns)
            {
                <th>@col.ColumnName</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                @foreach (DataColumn col in Model.Columns)
                {
                    <td>@row[col.ColumnName]</td>
                }
            </tr>
        }
    </tbody>
</table>



