@model BlackSys.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ParentController = "Account";
    ViewBag.ParentAction = "ResetPassword";
    ViewBag.ParentTitle = "My Profile";
}
<div class="col-md-9 col-sm-9">
    <h2>@ViewBag.Title.</h2>
    <div class="content-form-page">
        <div class="row">
            <div class="col-md-7 col-sm-7">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Reset your password.</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    //@Html.HiddenFor(model => model.Code)

                    {
                        string str = @"[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$";
                    }

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @*@Html.TextBox("Email", (string)ViewBag.Em, new { @class = "form-control" })*@
                            <input type="text" id="Email" required name="email" pattern=str value="@ViewBag.Em" readonly="readonly" class="form-control" /> 
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Reset" />
                        </div>
                    </div>
                }
            </div>
        </div>
        </div>
</div>

    
   
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
