@using BlackSys.Helpers
@model BlackSys.Models.RequisitionItems

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/jquerytoken")
<h3 class="page-title">
    Requisition Item Area
    <small> Create Items for Requisition</small>
</h3>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-green">
                    <i class="icon-pin font-green"></i>
                    <span class="caption-subject bold uppercase">Creating new</span>
                </div>
                <div class="actions">
                    <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                </div>
            </div>
            <div class="portlet-body form">
                @using (Html.BeginForm("Create", "RequisitionItems", FormMethod.Post, new { @class = "form-horizontal", role = "form", @Id = "Create RequisitionItem" }))
                {
                    <div class="form-body">
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-error" })


                        <div class="form-group  margin-top-20">

                            <div class="form-group form-md-line-input has-info">
                                @Html.LabelFor(model => model.Category, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    <div class="input-group">
                                        @Html.EditorFor(model => model.Category, new { @class = "form-control" })
                                        @*@Html.ValidationMessageFor(model => model.Category*@
                                        <span class="input-group-btn" style="width:0;">
                                            <a href="/RequisitionItemCategory/Create" class="btn btn-circle btn-default btn-group-lg" style="margin-right:10px; margin-left:10px;">
                                                <i class="fa fa-plus-circle"></i> Create Category
                                            </a>
                                        </span>
                                    </div>
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>
                            <div class="form-group form-md-line-input has-info">
                                @Html.LabelFor(model => model.Item, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Item, new { @class = "form-control" })
                                    @*@Html.ValidationMessageFor(model => model.Item)*@
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>

                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-2 col-md-10">
                                        <a href="/Requisition/Create" class="btn btn-circle btn-default btn-group-lg" style="margin-right:10px; margin-left:10px;">
                                            <i class="fa fa-arrow-left"></i> Back To Requisition
                                        </a>
                                        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
                                        <input type="submit" class="btn btn-primary" value="Save" />
                                    </div>
                                </div>
                            </div>
                    </div>


                </div>
                }
            </div>

        </div>
    </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jquerytoken")

        <script type="text/javascript">

            $(document).ready(function () {


                $("#Category").tokenInput("@Url.Action("GetRequisitionItemCategory", "RequisitionItems")",
                {
                    theme: 'facebook',
                    tokenLimit: 1,
                    preventDuplicates: true
                });
            });

        </script>
    }

